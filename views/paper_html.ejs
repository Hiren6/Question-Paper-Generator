    <%for css_file in css_files %>
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename=css_file) }}"/>
	<% endfor %>

</head>

<body>

	<div class="container-fluid p-5" style="border:1px solid green;">

		<!-- {% if paper.paper_logo %}
            NO LOGO
		<div class="row">

			<div class="col"></div>
			<div class="col-2">
            	<img src='/static/logos/{{paper.paper_logo}}' class="paper_logo" alt="paper logo"/>
            </div>
			<div class="col"></div>

		</div>
		{% endif %} -->

		<div class="row" style="display: flex;justify-content: center; font-weight: bold;">
			<p style="margin: 0;"><%=paper.paper_type%> Examination</p>
		</div>
		<div class="row" style="display: flex;justify-content: center; font-weight: bold;">
			<p style="margin: 0;">Term : <%= paper.year %></p>
		</div>
		<div class="row pb-3" style="font-weight: bold; border-bottom: 2px solid black;">
			<div class="col" style="text-align: left;"><p style="margin: 0;">Date : <%= paper.paper_date %></p></div>
			<div class="col" style="text-align: center;"><p style="margin: 0;">Marks : <%= paper.total_marks %></p></div>
			<div class="col" style="text-align: right;"><p style="margin: 0;">Time limit : <%= paper.duration %> mins</p></div>
		</div>

		<div class="row pt-3 px-4" style="border-bottom: 2px solid black;">
			<!-- <h5 style="width: 100%; font-weight: bold;">Instructions :</h5> -->
			<div class="container" style="max-width: 97%;text-align: justify;">
				<ul style="font-weight: bold;">
					<!-- {% for instruction in paper.instructions %}
						<li>{{instruction}}</li>
					{% endfor %} -->
				</ul>
			</div>
		</div>
		<div class="row mt-4" style="text-align: justify;">
            <% let i=0; %>
            <% if(questions[0].type=="MCQ") {%>
			<h5 style="font-weight: bold; width: 100%; height: auto;">Answer the following Multiple choice questions.</h5>

			<ul class="mt-4" style="list-style-type: none">

				<%for(i=0;i<questions.length;i++){%>
                    <%if(question[i].q_type=="Subjective") break;%>
					<li>
                        <%let q=question[i].q_stmt.split("#$")%>
					<!-- <ul class="mb-4" type="1" style="list-style-type: none"> -->
						<li style="padding-left: 10px">q[0]    <b>[marks] </b></li>
						<ol class="mb-4" type="A">
							<li style="padding-left: 10px">q[1]</li>
							<li style="padding-left: 10px">q[2]</li>
							<li style="padding-left: 10px">q[3] </li>
							<li style="padding-left: 10px">q[4] </li>
						</ol>



					<!-- </ul> -->
					</li>

				<%}%>

			</ul>
            <%}%>
            <% if(i<question.length)){ %>
			<h5 style="font-weight: bold; width: 100%; height: auto;">Answer the following subjective questions.</h5>
			<ul class="mt-4" style="list-style-type: none">

				<% for(let j=i;j<question.length;j++){%>

					<li>
							<li style="padding-left: 10px">question[j].q_stmt  <b>[{{ paper.paper_format.sub[q][sub_q]['mark'] }}] </b></li>
					</li>

				<%}%>

			</ul>

		</div>
    </div>

<script src="https://kit.fontawesome.com/84a8728d56.js" crossorigin="anonymous"></script>
