<!DOCTYPE html>
<html>
<head>
    <%- include("./partials/head.ejs") %>

</head>
<body>
    <%- include("./partials/parent_nav.ejs") %>
    

<div class="container  bg-dark p-4 px-5">

  <div class="container p-2  bg-white text-center">
        <!-- <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span> -->
        <form method="post" action="/course/generateq/<%= course_id%>/<%=paper_id%>">
          <div>
            <label for="chapter_no">Chapter Number</label><br>
            <input type="number" class="p-2 w-50" id="chapter_no" name="chapter_no" min="1">
          </div>
          <div>        
            <label for="q_type">Question Type</label><br>
            <select class="p-2 w-50" name="q_type" id="qType" onChange="handleType(value)">
              <option value="Subjective">Subjective</option>
              <option value="MCQ">MCQ</option>
            </select><br>
          </div>
          <div>
            <label for="difficulty">Question set Difficulty</label><br>
            <select class=" p-2 w-50" name="difficulty" id="qType" onChange="handleType(value)">
              <option value="Easy">Easy</option>
              <option value="Moderate">Moderate</option>
              <option value="Hard">Hard</option>
              <option value="Challenging">Challenging</option>
            </select>
          </div>
          <div>
            <label for="fname">Number of questions</label><br>
            <input type="number" id="quantity" class="p-2 w-50" name="quantity" min="1" max="50">
          </div>
          <div class=" text-center pt-3">
            <a href="/#" type="button" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-secondary ">Next</button>
            <a href="/course/generatepaper/<%=course_id%>/<%=paper_id%>" type="button" class="btn btn-primary">Submit</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
</body>
</html>
